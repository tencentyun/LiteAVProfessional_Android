<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="contentDescription">

    <com.tencent.rtmp.ui.TXCloudVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/record_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ugcrecord_icon_record_start"
        android:onClick="onClick" />


    <!--录制完成-->
    <RelativeLayout
        android:id="@+id/publishLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/record_delete"
            android:layout_width="@dimen/ugckit_live_btn_size"
            android:layout_height="@dimen/ugckit_live_btn_size"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="80dp"
            android:background="@drawable/ugcrecord_icon_record_delete"
            android:onClick="onClick" />

        <ImageView
            android:id="@+id/record_download"
            android:layout_width="@dimen/ugckit_live_btn_size"
            android:layout_height="@dimen/ugckit_live_btn_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:background="@drawable/ugcrecord_icon_record_download"
            android:onClick="onClick" />


        <ImageView
            android:id="@+id/record_to_edit"
            android:layout_width="@dimen/ugckit_live_btn_size"
            android:layout_height="@dimen/ugckit_live_btn_size"
            android:layout_centerInParent="true"
            android:background="@drawable/ugcrecord_selector_preview_to_edit"
            android:onClick="onClick" />

    </RelativeLayout>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/publishLayout"
        android:layout_gravity="center|right"
        android:layout_marginBottom="15dp"
        android:max="0"
        android:maxHeight="2.0dip"
        android:minHeight="2.0dip"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:progress="0"
        android:progressDrawable="@drawable/ugcrecord_play_seekbar_progress"
        android:thumb="@drawable/ugcrecord_play_seekbar_icon" />

    <TextView
        android:id="@+id/progress_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekbar"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        android:text="00:00/00:00"
        android:textColor="@color/ugckit_c8"
        android:textSize="@dimen/ugckit_h6" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:visibility="gone" />
</RelativeLayout>